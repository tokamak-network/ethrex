---
interface Props {
  title: string;
  currentPath?: string;
}

const { title, currentPath = "/" } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Tokamak EVM client performance dashboard" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-tokamak-bg text-white">
    <slot name="header" />
    <main class="mx-auto max-w-6xl px-4 py-8">
      <slot />
    </main>
    <slot name="footer" />
  </body>
</html>
